		{
			super();
		}
		
		//--------------------------------------------------------------------------------------------------------- 
		// 
		//  PUBLIC & INTERNAL METHODS 
		// 
		//---------------------------------------------------------------------------------------------------------
		override public function execute():void{
			var pData:VOInfo = VOInfo(event.data);	
			popupManager.popupInfo(pData);
			
		}
		
